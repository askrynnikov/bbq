<p id="notice"><%= notice %></p>

<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{asset_path('event.jpg')}); background-size: 100%; background-position: center; " do
      %>
          <div class="event-info-inner row">
            <div class="col-md-6">
              <div class="event-description">
                <h1><%= @event.title %></h1>
                <h3><%= @event.datetime %></h3>
                <h3>
                  <small><%= link_to @event.address, "http://yandex.ru/maps/?text=#{@event.address}" %></small>
                </h3>
                <p><%= @event.description %></p>
              </div>
              <% if current_user_can_edit?(@event) %>
                  <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %> |
              <% end %>
              <%= link_to 'Back', events_path %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

