<% errors = model.errors %>
<% if errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <div class="lead buffer-bottom">
        <%= t :error, count: errors.count %> <%= t :model_not_saved %>:
      </div>
      <ul>
        <% errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
