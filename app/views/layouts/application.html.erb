<!DOCTYPE html>
<html>
<head>
  <title>Bbq</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">

  <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <%= msg %>
      </div>
  <% end %>

  <nav class="navbar navbar-light bg-faded">
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to t('app.name'), root_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Профиль", current_user, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Выйти", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
      <% else %>
          <li class="nav-item">
            <%= link_to "Войти", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Зарегистрироваться", new_user_registration_path, class: "nav-link" %>
          </li>
      <% end %>
    </ul>
  </nav>

  <%= yield %>

  <footer>
    <p>&copy; <%= t 'app.company' %> 2017</p>
  </footer>
</div>
</body>
</html>
