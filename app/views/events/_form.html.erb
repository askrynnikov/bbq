<%= form_for(event) do |f| %>
    <%= render partial: 'partials/form_errors', locals: { model: event } %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form_control' %>
    </div>

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form_control' %>
    </div>

    <div class="form-group">
      <%= f.label :datetime %>
      <%= f.datetime_select :datetime, class: 'form_control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form_control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить' ,class: "btn btn-primary" %> или <%= link_to 'Вернуться', :back %>
    </div>
<% end %>
