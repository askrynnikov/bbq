<div class="col-form-label col-form-label-sm">
<div class="thumbnail">
  <%= content_tag 'div', '',
                  class: 'event-background',
                  style: "background-image: url(#{asset_path('event_thumb.jpg')})"
  %>
  <div class="thumbnail-inner event-info-inner">
    <div class="figure-caption">
      <div class="event-description">
        <h3><%= link_to event.title, event %></h3>
        <h3>
          <small><%= event.datetime %></h3></small>
        <div class="buffer-both"><%= event.address %></div>
      </div>
    </div>
  </div>
</div>
</div>
